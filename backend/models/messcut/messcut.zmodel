import '../base/base'
import "../user/user"

model Messcut extends Base {
  date          DateTime
  cutType       CutType
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  adminVerified Boolean  @default(true)

  @@unique([date, cutType, userId])

  @@allow('all', auth() != null && (auth().id == userId || auth().role == "ADMIN"))
}

enum CutType {
  MORNING_MEAL
  AFTERNOON_MEAL
  EVENING_MEAL
  FULL_MEAL
}
